
<h2 class = "form-h1 text-center pb-2">Ttile: <%= @article.title%> <%= params[:id] %></h2>

<div class="well col-sm-8 d-flex justify-content-center flex-column align-content-center" >  


  <div class='row d-flex justify-content-center flex-column align-items-center'>
  <div class= 'col-md-3 mt-2 text-center'> 
    <small>Created by: </small>
    <div class='text-center'><%= image_tag @article.user.gravatar_url(:rating => 'R', :secure => true), class: 'rounded' %> </div>
     <div class= "mt-2"> <%= link_to @article.user.username, user_path(@article.user) %></div>
    <div class= "mt-2"> <%= pluralize(@article.user.articles.count, 'article') if @article.user.articles.any? %> </div>
   </div>
</div>
  <h4 class='text-center'> Description: </h4>
  <hr> 
  <div class="article-desc"> 
    <p> <%= @article.description%> </p>
  </div> 

  <hr> 
  <div class='article-actions'>
    <%= link_to 'Edit this article', edit_article_url(@article), class: 'btn btn-xs btn-primary' %> 
    <%= link_to 'Delete this article', article_path(@article), method: :delete, 
                                      data: {confirm: 'Are you sure that you want to delete this article?'},
                                      class: 'btn btn-xs btn-danger' %> 
    <%= link_to 'See all articles', articles_url, class: 'btn btn-xs btn-success' %> 
  </div>

</div>
