<% if @article.errors.any? %>
<h2 class= "mt-3">The following errors occured: </h2>
  <ul> 
    <% @article.errors.full_messages.each do |msg| %>  
      <li><%= msg%></li>
    <% end %>
  </ul>
<% end%>

      <div class="row form">
        <%= form_for @article do |f| %>
      <div class= "form-group" >
        <%= f.label "Title:", class: "col-sm-2 col-form-label text-end" %> 
        <div class = "col-sm-8" >
        <%= f.text_field :title,   class:"form-control", placeholder: "Title of the article", autofocus: true %>
        </div>
      </div>

      <div class= "form-group" >
        <%= f.label "Description:", class: "col-sm-2 col-form-label text-end" %> 
        <div class = "col-sm-8" >
        <%= f.text_area :description, rows: 8,   class:"form-control", placeholder: "Description of the article", autofocus: true %>
        </div>
      </div>

      <div class= "form-group" >
      <div class= "col-sm-2">
      </div>
            <%= f.submit class: "btn btn-lg btn-warning submit-btn " %>
      </div>
    <% end %>
    <div class = " col-xs-4 col-xs-offset-4">
    <%= link_to "Back to all articles",  articles_url, class: "text-dark p-4" %> 
    </div>
</div>

 