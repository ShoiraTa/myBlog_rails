<h1>List of all articles</h1>

<%= link_to 'Create a new article', new_article_path %>

<table> 
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
    <% @articles.each do |article|%>
  <tr>
    <td>
      <%= article.title%>
    </td>
    <td>
      <%= article.description%>
    </td>
    <td>
      <%= link_to 'Edit', edit_article_path(article) %>
      <%= link_to 'Show', article_path(article) %>
      <%= link_to 'Delete', article, method: :delete,  data: { confirm: "Really?" } %></td>
    </td>
  <tr>

  <% end %>
