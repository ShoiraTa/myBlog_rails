<h1 class="text-center"> Log in</h1>

<%= form_for(:session, url: login_path)  do |f| %>
<div class= "form-group" >
  <%= f.label "Email:", class: "col-sm-2 col-form-label text-end" %> 
  <div class = "col-sm-8" > <%= f.email_field :email, class:"form-control", placeholder: "Email", autofocus: true %></div>
</div>

<div class= "form-group" >
  <%= f.label "Password:", class: "col-sm-2 col-form-label text-end" %> 
  <div class = "col-sm-8" >
  <%= f.password_field :password, class:"form-control", autocomplete: 'off', autofocus: true %>
  </div>
</div>

<div class= "form-group" >
  <div class= "col-sm-2"></div>
  <%= f.submit 'Submit', class: "btn btn-lg btn-warning submit-btn " %>
</div>

<% end %> 