<h1 class = 'text-center m-4'>All bloggers</h1>

<% @users.each do |user| %>
<div class='row d-flex justify-content-center flex-column align-items-center'>
  <div class= 'col-md-3 mt-2 bg-secondary-custom text-center'> 
    <div class='text-center'><%= image_tag user.gravatar_url(:rating => 'R', :secure => true), class: 'rounded' %> </div>
     <div class= "mt-2"> <%= link_to user.username, user_path(user) %></div>
    <div class= "mt-2"> <%= pluralize(user.articles.count, 'article') if user.articles.any? %> </div>
   </div>
</div>
<% end %>
<div class='d-flex justify-content-center mt-4  '>
 <%= will_paginate(@articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer)%>
</div>