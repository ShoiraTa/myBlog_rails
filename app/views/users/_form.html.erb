<%= form_for @user do |f| %>
      <div class= "form-group" >
        <%= f.label "Username:", class: "col-sm-2 col-form-label text-end" %> 
          <div class = "col-sm-8" >
          <%= f.text_field :username,   class:"form-control", Username: "Title of the article", autofocus: true %>
        </div>
      </div>

      <div class= "form-group" >
        <%= f.label "Email:", class: "col-sm-2 col-form-label text-end" %> 
        <div class = "col-sm-8" >
        <%= f.email_field :email, class:"form-control", placeholder: "Email", autofocus: true %>
        </div>
      </div>

      <div class= "form-group" >
        <%= f.label "Password:", class: "col-sm-2 col-form-label text-end" %> 
        <div class = "col-sm-8" >
        <%= f.password_field :password, class:"form-control", placeholder: "Password", autofocus: true %>
        </div>
      </div>

      <div class= "form-group" >
        <div class= "col-sm-2"></div>
        <%= f.submit 'Submit', class: "btn btn-lg btn-warning submit-btn " %>
      </div>
            
  <% end %>
